<%= form_with(model: slot_rule, url: [@service, slot_rule], class: "contents") do |form| %>
  <div class="my-5">
    <%= form.time_select(
      :time,
      { ampm: true, minute_step: 15 },
      {
        class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full",
        required: false,
        id: "slot_rule_selector"
      }
    ) %>
  </div>
  <div class="my-5">
    <% (1..7).each do |wday| %>
      <%= form.check_box :wdays, { multiple: true, class: "my-2 h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-600" }, wday %>
      <%= t('date.day_names')[wday].upcase_first %><br>
    <% end %>
  </div>
  <div class="inline">
    <%= form.submit t(:save), class: "w-full my-5 rounded-lg py-3 px-5 bg-blue-100 text-blue-700 inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
