<div class="w-full text-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-3xl"><%= t(:my_events) %></h1>
    <%= link_to service_main_menu_path(@service),
      class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium", id: 'main_menu' do %>
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
          <path fill-rule="evenodd" d="M3 6.75A.75.75 0 0 1 3.75 6h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 6.75ZM3 12a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75A.75.75 0 0 1 3 12Zm0 5.25a.75.75 0 0 1 .75-.75h16.5a.75.75 0 0 1 0 1.5H3.75a.75.75 0 0 1-.75-.75Z" clip-rule="evenodd" />
        </svg>
    <% end %>
  </div>

  <div id="events" class="mt-5 min-w-full">
    <hr class="my-6">
    <%= render @events %>
  </div>
  <div class="flex justify-between items-center m-6">
    <%= link_to '<', service_events_path(@service, page: @page - 1), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <%= link_to '>', service_events_path(@service, page: @page + 1), class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
</div>
