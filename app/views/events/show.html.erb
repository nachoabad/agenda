<div class="mx-auto md:w-1/4 w-full flex text-center">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @event %>

    <%= button_to @event.blocked? ? 'Desbloquear esta cita' : 'Cancelar esta cita',
      event_path(@event),
      method: :delete,
      class: "w-full mt-2 rounded-lg py-3 px-5 bg-red-200 font-medium" %>
    <%= link_to 'Regresar', service_slots_path(@event.service), class: "mt-3 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
