<div class="mx-auto md:w-1/4 w-full">
  <h1 class="font-bold text-3xl text-center"><%= t(:login) %></h1>

  <% if notice.present? %>
    <p class="w-full text-center my-5 py-2 px-3 bg-green-50 text-green-700 mb-5 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% if alert.present? %>
    <p class="w-full text-center my-5 py-2 px-3 bg-red-100 text-red-700 mb-5 font-medium rounded-lg inline-block" id="alert"><%= alert %></p>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "contents") do |f| %>
    <div class="my-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="my-5">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
    </div>

    <div class="inline">
      <%= f.submit t(:login), class: "w-full my-5 rounded-lg py-3 px-5 bg-blue-100 text-blue-700 inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>