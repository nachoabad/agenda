<div class="mx-auto md:w-1/4 w-full">
  <h1 class="font-bold text-3xl text-center">Cambiar mi clave</h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "contents" }) do |f| %>

    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="my-5">
      <%= f.label :password, "Nueva clave" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mÃ­nimo)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
    </div>

    <div class="my-5">
      <%= f.label :password_confirmation, "Confirmar nueva clave" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
    </div>

    <div class="inline">
      <%= f.submit "Cambiar mi clave", class: "w-full my-5 rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
