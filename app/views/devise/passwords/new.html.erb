<div class="mx-auto md:w-1/4 w-full">
  <h1 class="font-bold text-3xl text-center"><%= t(:forgot_password) %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "contents" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="my-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full", required: true %>
    </div>

    <div class="inline">
      <%= f.submit t(:reset_password), class: "w-full my-5 rounded-lg py-3 px-5 bg-blue-100 text-blue-700 inline-block font-medium cursor-pointer" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>